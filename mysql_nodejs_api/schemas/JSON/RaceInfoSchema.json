{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "items": {
        "type": "object",
        "required": ["RaceID", "CircuitID", "SeasonYear", "SeasonRound", "CircuitName"],
        "properties": {
            "RaceID": { 
                "type": "number",
                "description": "The unique RaceID for the race"
            },
            "CircuitID": { 
                "type": "number",
                "description": "The unique CircuitID for the circuit"
            },
            "SeasonYear": { 
                "type": "number",
                "description": "The year of the season"
            },
            "SeasonRound": { 
                "type": "number",
                "description": "The round of the season"
            },
            "CircuitName": { 
                "type": "string",
                "description": "The name of the circuit"
            }
        }
    }
}